<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<h1>User info</h1>
<%= image_tag @uuser.get_profile_image(60,60)%>
 <table class="table">
  <tbody>
  <tr>
	  <th>name</th>
　<th><%= @uuser.name%></th>
　</tr>
  <tr>
　<th>introduction</th>
　<th><%= @uuser.introduction %></th>
　</tr>
　</tbody>
　</table>
  <div class="row">

</div>

　<%= link_to edit_user_path(@uuser) do %>  <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
　<% end %>
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
 </div>


<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table">
  		  <tbody>
  		    <tr>
  		      <td>
               <%= link_to user_path(@uuser.id) do %>
                <%= image_tag @uuser.get_profile_image(60,60)%><br>
                <%= @uuser.name %>
               <% end %>

            </td>
            <td>
               <%= link_to @book.title, book_path(@book.id)%>
            </td>
            <td><%= @book.body %>
            </td>
            <td>
              <% if @book.user == current_user %>
               <%= link_to "Edit", edit_book_path(@book),class:'btn btn-success' %>
               <%= link_to "Destroy", book_path(@book),class:'btn btn-danger',method: :delete, "data-confirm" => "本当に削除しますか？" %>
             <% end %>
            </td>
          </tr>
        </tbody>
  </table>
</div>
</div>
</div>
</div>

